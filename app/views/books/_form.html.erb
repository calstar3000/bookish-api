<%= form_with model: @book, local: true do |form| %>

    <% if @book.errors.any? %>
        <div class="notification is-danger">
        <div class="content">
            <p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
            <ul>
            <% @book.errors.full_messages.each do |errorMessage| %>
                <li><%= errorMessage %></li>
            <% end %>
            </ul>
        </div>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :title, class: "label" %>
        <div class="control">
        <%= form.text_field :title, class: "input" %>
        </div>
    </div>

    <div class="field">
        <%= form.label :author, class: "label" %>
        <div class="control">
        <%= form.text_field :author, class: "input" %>
        </div>
    </div>

    <div class="field">
        <div class="level">
        <div class="level-left">
            <div class="level-item">
            <%= form.submit "Save", class: "button is-primary" %>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
            <%= link_to 'Cancel', books_path, class: "link is-info" %>
            </div>
        </div>
        </div>
    </div>

<% end %>